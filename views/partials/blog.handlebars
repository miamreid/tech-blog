{{#each blog as |blog|}}

<div class="card">
    <div class="card-title">
        <h2><a href="/blogs/{{blog.id}}">{{blog.title}}</a></h2>
        <p>Posted by: {{user.username}}</p>
    </div>
    <div class="card-content">
        <p>{{blog.content}}</p>
    </div>
    <p class="hidden" id="blog-id">{{blog.id}}</p>
</div>

{{/each}}