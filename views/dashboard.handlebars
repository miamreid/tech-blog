<div class="container" style="padding: 50px;">
{{#each blogs as |blog|}}
<div class="card">
    <div class="card-body">
        <a href="/dashboard/edit/{{{blog.id}}}" class="edit-blog">{{{blog.title}}}</a>
    </div>
</div>
{{/each}}
</div>

<div class="container" style="padding: 50px;">
<form class="add-blog">
    <div class="mb-3">
        <label for="blog-title" class="form-label">Title</label>
        <input type="text" id="blog-title" class="form-control" name="blog-title" />
    </div>
    <div class="mb-3">
        <label for="blog-content" class="form-label">Content</label>
        <textarea name="blog-content" class="form-control" rows="3"></textarea>
    </div>
    <button type="submit" class="add-blog-btn btn btn-primary">Post</button>
</form>
</div>

<script src="/js/add-blog.js"></script>