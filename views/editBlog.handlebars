<div class="container" style="padding: 50px;">
<form class="blog-editor">
    <div class="mb-3">
        <label for="blog-title" class="form-label">Title</label>
        <input name="blog-title" type="text" class="form-control" value="{{{blog.title}}}" />
    </div>
    <div class="mb-3">
        <label for="blog-content" class="form-label">Content</label>
        <textarea name="blog-content" type="text" class="form-control">{{{blog.content}}}</textarea>
    </div>
    <button class="btn btn-primary" type="submit">Update</button><br />
    <button type="button" class="delete-blog-btn btn btn-primary">Delete</button>
</form>
</div>

{{#if loggedIn}}
<script src="/js/edit-blog.js"></script>
<script src="/js/delete-blog.js"></script>
<script src="/js/comment.js"></script>
{{/if}}